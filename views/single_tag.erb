<div class="well">
  <h3>Category: <%=@tag.name%></h3>
</div>

<div class="well row">
  <div class="col-xs-4">
    <h3>Associated Contacts:</h3>
    <% if @tag.contacts.any? %>
      <ul>
        <% @tag.contacts.each do |contact| %>
          <li><a href="/single_contact/<%=contact.id%>"><%= contact.name %></a></li>
          <% end %>
      </ul>
    <% else %>
      <h4>No contacts have this tag.</h4>
    <% end %>
  </div>

  <div class="col-xs-4">
    <h3>Associated Organizations:</h3>
    <% if @tag.organizations.any? %>
      <ul>
        <% @tag.organizations.each do |org| %>
          <li><a href="/single_organization/<%=org.id%>"><%= org.name %></a></li>
          <% end %>
      </ul>
    <% else %>
      <h4>No organizations have this tag.</h4>
    <% end %>
  </div>

  <div class="col-xs-4">
    <h3>Associated Openings:</h3>
    <% if @tag.openings.any? %>
      <ul>
        <% @tag.openings.each do |opening| %>
          <li><a href="/single_opening/<%=opening.id%>"><%= opening.name %></a></li>
          <% end %>
      </ul>
    <% else %>
      <h4>No openings have this tag.</h4>
    <% end %>
  </div>
</div>
