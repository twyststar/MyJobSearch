<div class="well">
  <% if @contacts.any? %>
    <h2>All contacts: (<%= @contacts.length %>)</h2>
    <ul>
      <% @contacts.each do |contact| %>
        <li><a href="/single_contact/<%=contact.id%>"><%= contact.name %></a></li>
        <% end %>
    </ul>
  <% else %>
    <h3>No contacts listed yet.</h3>
  <% end %>
</div>


<div class="well">
  <form class="form-horizontal" action="/contacts/new" method="post">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name">
    </div>
    <div class="form-group">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title">
    </div>
    <div class="form-group">
      <label for="address">Address:</label>
      <input type="text" id="address" name="address">
    </div>
    <div class="form-group">
      <label for="phone">Phone:</label>
      <input type="tel" id="phone" name="phone">
    </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email">
    </div>
    <div class="form-group">
      <label for="linkedin">LinkedIn:</label>
      <input type="url" id="linkedin" name="linkedin">
    </div>
    <div class="form-group">
      <label for="context">The context of the contact:</label>
      <input type="text" id="context" name="context">
    </div>

    <% if @organizations.any? %>
      <div class="form-group">
        <h4>Organizations for your contact:</h4>
        <% @organizations.each do |organization| %>
        <label for="organization_ids[]"><%= organization.name %> <input type="checkbox" id="organization_ids[]" name="organization_ids[]" value="<%= organization.id %>"></label>
        <% end %>
      </div>
    <% end %>
    <% if @tags.any? %>
      <div class="form-group">
        <h4>Categories/Tags:</h4>
        <% @tags.each do |tag| %>
        <label for="tag_ids[]"><%= tag.name %> <input type="checkbox" id="tag_ids[]" name="tag_ids[]" value="<%= tag.id %>"></label>
        <% end %>
      </div>
    <% end %>
    <div class="form-group">
      <label for="text">Notes:</label>
      <input type="text" id="text" name="text">
    </div>
    <button class="btn" type="submit" name="button">Submit</button>
  </form>
</div>
